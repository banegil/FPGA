#include <s3c44b0x.h>
#include <leds.h>

static uint8 stateL, stateR;

void leds_init( void )
{
	stateL = OFF;
	stateR = OFF;
	PDATB = ~( (0<<10) | 0<<9 );
}

void led_on( uint8 led )
{
	if(led == RIGHT_LED){
		stateR = ON;
		PDATB = ~(0<<10);
	}
	else if(led == LEFT_LED){
		stateL = ON;
		PDATB = ~(0<<9);
	}
}

void led_off( uint8 led )
{
	if(led == RIGHT_LED){
		stateR = OFF;
		PDATB = ~(1<<10);
	}
	else if(led == LEFT_LED){
		stateL = OFF;
		PDATB = ~(1<<9);
	}
}

void led_toggle( uint8 led )
{
	if(led == RIGHT_LED) {
		if(stateR == ON) led_off(led);
		else led_on(led);
	}
	else if(led == LEFT_LED) {
		if(stateL == ON) led_off(led);
		else led_on(led);
	}
}

uint8 led_status( uint8 led )
{
    return led == LEFT_LED? stateL: stateR;
}
