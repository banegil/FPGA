#include <s3c44b0x.h>
#include <leds.h>

static uint8 state;

void leds_init( void )
{
	state &= ~( (0<<10) | 0<<9 );
	PDATB &= ~( (0<<10) | 0<<9 );
}

void led_on( uint8 led )
{
	if(led == RIGHT_LED){
	PDATB &= ~( (1<<10) | 0<<9 );
	}
	else PDATB &= ~( (0<<10) | 1<<9 );
}

void led_off( uint8 led )
{
	if(led == RIGHT_LED){
	PDATB &= ~( (0<<10) | 1<<9 );
	}
	else PDATB &= ~( (1<<10) | 0<<9 );
}

void led_toggle( uint8 led )
{
	led_on(led);
}

uint8 led_status( uint8 led )
{
    return state;
}
